	<div class="com_container">
		<div class="com_title">
			<img id="com_title" class="com_title_img" src="<%= asset_path("zz.png") %>" />
		</div>
		<div class="com_button">
			<button onclick=''>롤체 게시판</button>
			<button onclick=''>팁/공략</button>
			<button onclick=''>홍보 게시판</button>
		</div>
		<div class="com_content">
			<table style="width: 500px; margin-right: 400px; margin-top: 15px;">
				
				

				<caption>How I chose to spend my money</caption>
				<thead>
				  <tr>
					<th>Title</th>
					<th>Content</th>
					<th colspan="2"></th>
				  </tr>
				</thead>
				<tbody>
				  <% @posts.each do |post| %>
					<tr id="c_t">
						<th scope="row"><%= post.title %></th>
						<td><%= link_to post.content, post %></td>
					</tr>
				  <% end %>
				</tbody>
			  </table>
				

			

			<br>

			<%= link_to 'New Post', new_post_path %>
		</div>
		<div class="com_bottom">
			
		</div>
	</div>
	  
    
